<UserControl x:Class="MediaEngine.Playout.CueableMediaPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaEngine.Playout"
             xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Rectangle Name="rect_display" Panel.ZIndex="1"></Rectangle> 
            <Rectangle Fill="Black"></Rectangle> 
        </Grid>
        <Viewbox Stretch="Uniform">
            <Grid Visibility="Hidden">
                <ffme:MediaElement Name="clip_a" Width="1920" Height="1080" Background="Black"></ffme:MediaElement>
                <ffme:MediaElement Name="clip_b" Width="1920" Height="1080" Background="black"></ffme:MediaElement>
                <ffme:MediaElement Name="clip_c" Width="1920" Height="1080" Background="black"></ffme:MediaElement>
                <ffme:MediaElement Name="clip_d" Width="1920" Height="1080" Background="black"></ffme:MediaElement>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
