                        <RowDefinition Name="grd_keyers" Height="2.5*"></RowDefinition>
                        <!--<RowDefinition Name="grd_advanced" Height="2.35*"></RowDefinition>-->
                    </Grid.RowDefinitions>


                    <Viewbox Grid.Row="0">
