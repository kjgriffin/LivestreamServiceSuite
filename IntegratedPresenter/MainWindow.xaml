<Window xmlns:Presenter="clr-namespace:IntegratedPresenter.Main"  x:Class="IntegratedPresenter.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedPresenter.Main" xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:viewmodels="clr-namespace:Integrated_Presenter.ViewModels" xmlns:matrixcontrols="clr-namespace:Integrated_Presenter.ViewModels.MatrixControls"
        mc:Ignorable="d"
        Closing="OnClosing"
        PreviewKeyDown="WindowPreviewKeyDown"
        PreviewKeyUp="WindowKeyUp"
        Background="{StaticResource darkBlackBrush}"
        Title="Integrated Presenter" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu IsTabStop="False">
                <MenuItem Header="Connections" IsTabStop="False" Focusable="False">
                    <MenuItem Click="ClickConnect" Header="Switcher" Focusable="False" IsTabStop="False"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Click="ClickConnectMock" Header="Mock Switcher" Focusable="False" IsTabStop="False"></MenuItem>
                    <MenuItem Name="miConnectMockCameras" Click="ClickConnectMockCameras" Header="Mock Cameras" Focusable="False" IsTabStop="False" IsCheckable="True" IsChecked="False"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Click="ClickDisconnectSwitcher" Header="Disconnect" Focusable="False" IsTabStop="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="Presentation" IsTabStop="False" Focusable="False">
                    <MenuItem Header="Open" Click="OpenPresentation" IsTabStop="False" Focusable="False" ></MenuItem>
                    <Separator></Separator>
                    <MenuItem Name="miHotReloadPres" Header="Enable Hot Reload Presentation" Click="ClickToggleHotReloadPresentation" IsTabStop="False" Focusable="False" IsCheckable="True" IsChecked="False"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Name="miMute" Header="Mute [M]" Click="ToggleMutePres" IsTabStop="False" IsCheckable="True" IsChecked="False" Focusable="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="View" IsTabStop="False" Focusable="False">
                    <MenuItem Name="cbShowEffectiveCurrent" Header="Preview Effective Current" IsTabStop="False" IsCheckable="True" IsChecked="True" Click="ClickToggleShowEffectiveCurrentPreview" Focusable="False"></MenuItem>
                    <MenuItem Name="cbShowAutomationPreviews" Header="Preview Automation Steps" IsTabStop="False" IsCheckable="True" IsChecked="True" Click="ClickToggleShowAutomationPreviews" Focusable="False"></MenuItem>
                    <MenuItem Name="cbShowCurrentVideoCountdownTimer" Header="Video Countdown Timer (Current)" IsTabStop="False" IsCheckable="True" IsChecked="True" Click="ClickToggleShowCurrentVideoCountdownTimer" Focusable="False"></MenuItem>
                    <MenuItem Header="Audio Player [A]" IsTabStop="False" Click="ClickViewAudioPlayer" Focusable="False"></MenuItem>
                    <MenuItem Name="cbAdvancedPIPMovement" Header="Advanced PIP Location [L]" IsTabStop="False" Click="ClickViewAdvancedFlyKeySettings" Focusable="False"></MenuItem>
                    <MenuItem Name="miOpenAuxPlayer" Header="Open Aux Player" IsTabStop="False" Click="ClickOpenAuxPlayer" Focusable="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="Interaction" IsTabStop="False" Focusable="False">
                    <MenuItem Click="clickENTEROnlyForTrans" Name="miEnterButtonClickGuard" Header="ENTER Only For Auto Trans" IsCheckable="True" IsChecked="True" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Click="clickSPACEOnlyForTrans" Name="miSpaceButtonClickGuard" Header="SPACE Only For Cut Trans" IsCheckable="True" IsChecked="True" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Click="clickLoadDynamicButtons" Name="miLoadDynamicButtons" Header="Load Dynamic Buttons" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Click="clickShowSparePanel" Name="miShowSparePanel" Header="Show Spare Panel Window" IsTabStop="False" Focusable="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="Settings" IsTabStop="False" Focusable="False">
                    <MenuItem Header="Export Switcher Settings" Click="SaveSettings" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Header="Load Switcher Settings" Click="LoadSettings" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Header="Load Switcher Default" Click="LoadDefault" IsTabStop="False" Focusable="False"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Export User Settings" Click="SaveUserSettings" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Header="Load User Settings" Click="LoadUserSettings" IsTabStop="False" Focusable="False"></MenuItem>
                    <MenuItem Header="Load User Default" Click="LoadUserDefault" IsTabStop="False" Focusable="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="Automation" IsTabStop="False" Focusable="False">
                    <MenuItem Name="miTimer1Restart" Header="Timer1 Restart" IsCheckable="True" IsChecked="True" Click="ClickToggleAutomationTimer1" Focusable="False"></MenuItem>
                    <MenuItem Header="Set Video Preroll Delay" IsTabStop="False" Click="ClickSetVideoPrerollDelay" Focusable="False"></MenuItem>
                    <MenuItem Header="Set Drive Mode Preset Selection Delay" IsTabStop="False" Click="ClickSetDrivePresetSelectDelay" Focusable="False"></MenuItem>
                    <MenuItem Name="miDriveAutoTransGuard" Header="Enable Drive Mode Auto Transition Guard" IsCheckable="True" IsChecked="True" Click="ClickToggleDriveAutoTransGuard" Focusable="False"></MenuItem>
                    <MenuItem Name="miCutTransitionGuard" Header="Enable Cut Transition Guard" IsCheckable="True" IsChecked="True" Click="ClickToggleCutTransGuard" Focusable="False"></MenuItem>
                    <MenuItem Name="miPostset" Header="Enable Postset" IsCheckable="True" IsChecked="True" Click="ClickTogglePostsetFeature" Focusable="False"></MenuItem>
                    <MenuItem Name="miMRETransitions" Header="Blocking Auto Transition" IsCheckable="True" IsChecked="True" Click="ClickToggleMRETransitionFeature" Focusable="False"></MenuItem>
                    <MenuItem Header="Open CCU Driver" Click="ClickOpenCCUDriverUI" Focusable="False"></MenuItem>
                    <MenuItem Name="miCCUEnabled" Header="Enable Auto Pilot" IsCheckable="True" IsChecked="True" Click="ClickToggleAutoPilot" Focusable="False"></MenuItem>
                </MenuItem>
                <MenuItem Header="Help" IsTabStop="False" Focusable="False">
                    <MenuItem Name="miShowShortcuts" Header="Show Keyboard Shortcuts [S]" IsCheckable="True" IsChecked="False" Click="ClickShowKeyboardShortcuts" Focusable="False"></MenuItem>
                    <MenuItem Header="Online Help" IsTabStop="False" Click="ClickShowOnlineHelp" Focusable="False"></MenuItem>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Grid.Row="1">
