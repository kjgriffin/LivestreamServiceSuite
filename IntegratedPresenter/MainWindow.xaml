                                                            <StackPanel Orientation="Horizontal">
                                                                <Border Style="{StaticResource UIShortcutBdr}">
                                                                    <Viewbox>
                                                                        <TextBlock Style="{StaticResource UIShortcut}">&#x1F847;</TextBlock>
                                                                    </Viewbox>
                                                                </Border>
                                                            </StackPanel>
                                                        </Viewbox>
                                                        <Button Name="BtnPauseMedia" Click="ClickPauseMedia" Style="{StaticResource SwitcherButton_Disabled}">PAUSE</Button>
                                                    </Grid>
                                                    <Grid Grid.Column="3">
                                                        <Viewbox Name="ksc_mplay" Panel.ZIndex="1" Height="50" Width="50">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Border Style="{StaticResource UIShortcutBdr}">
                                                                    <Viewbox>
                                                                        <TextBlock Style="{StaticResource UIShortcut}">&#x1F845;</TextBlock>
                                                                    </Viewbox>
                                                                </Border>
                                                            </StackPanel>
                                                        </Viewbox>
                                                        <Button Name="BtnPlayMedia" Click="ClickPlayMedia" Style="{StaticResource SwitcherButton_Disabled}">PLAY</Button>
                                                    </Grid>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Foreground="{StaticResource redBrush}" FontSize="30">T-</TextBlock>
                                                        <TextBlock Name="TbMediaTimeRemaining" Foreground="{StaticResource redBrush}" FontSize="30">0:00</TextBlock>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Foreground="{StaticResource greenBrush}" FontSize="30">T+</TextBlock>
                                                        <TextBlock Name="TbMediaTimeCurrent" Foreground="{StaticResource greenBrush}" FontSize="30">0:00</TextBlock>
                                                        <TextBlock Foreground="{StaticResource whiteBrush}" FontSize="30">/</TextBlock>
                                                        <TextBlock Name="TbMediaTimeDurration" Foreground="{StaticResource tealBrush}" FontSize="30">0:00</TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Grid>
                    </Viewbox>

                </Grid>

            </Grid>
            <Grid Grid.Column="1" Margin="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="4*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Grid.Column="0">
                                <Viewbox Stretch="Uniform" HorizontalAlignment="Right">
                                    <Grid Width="1920" Height="1080">
                                        <!--<Border Name="PrevPreviewDisplay" BorderBrush="Orange" BorderThickness="2,2,2,2">-->
                                        <Grid>
                                            <viewmodels:SlidePreview x:Name="PrevPreview"></viewmodels:SlidePreview>
                                            <TextBlock Name="tbPreviewPrevVideoDuration" Foreground="{StaticResource whiteBrush}" FontSize="100">
                                                <TextBlock.Text>
                                                    00:00:00
                                                </TextBlock.Text>
                                                <TextBlock.RenderTransform>
                                                    <TranslateTransform X="50" Y="900"></TranslateTransform>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                        </Grid>
                                        <!--</Border>-->
                                    </Grid>
                                </Viewbox>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Border Style="{StaticResource GroupBorder}" Margin="0">
                                    <viewmodels:PilotUI x:Name="pilotUI"></viewmodels:PilotUI>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="2" Grid.Column="0">
                                <Viewbox Stretch="Uniform" HorizontalAlignment="Right">
                                    <Grid Width="1920" Height="1080" >
                                        <!--<Border Name="AfterPreviewDisplay" BorderBrush="Blue" BorderThickness="2,2,2,2">-->
                                        <Grid>
                                            <viewmodels:SlidePreview x:Name="AfterPreview" ></viewmodels:SlidePreview>
                                            <TextBlock Name="tbPreviewAfterVideoDuration" Foreground="{StaticResource whiteBrush}"  FontSize="100">
                                                <TextBlock.Text>
                                                    00:00:00
                                                </TextBlock.Text>
                                                <TextBlock.RenderTransform>
                                                    <TranslateTransform X="50"  Y="900"></TranslateTransform>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                        </Grid>
                                        <!--</Border>-->
                                    </Grid>
                                </Viewbox>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Grid Width="1920" Height="1080">
                                <!--<Border BorderBrush="Red" BorderThickness="2,2,2,2">-->
                                <Grid>
                                    <viewmodels:SlidePreview  x:Name="CurrentPreview"></viewmodels:SlidePreview>
                                    <TextBlock Name="tbPreviewCurrentVideoDuration" Foreground="{StaticResource redBrush}" FontSize="100">
                                        <TextBlock.Text>00:00:00</TextBlock.Text>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform X="50" Y="900"></TranslateTransform>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Grid>
                                <!--</Border>-->
                            </Grid>
                        </Viewbox>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Viewbox Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Grid Width="1920" Height="1080">
                                <Grid>
                                    <viewmodels:SlidePreview x:Name="NextPreview"></viewmodels:SlidePreview>
                                    <TextBlock Name="tbPreviewNextVideoDuration" Foreground="{StaticResource greenBrush}" FontSize="100" Padding="5">
                                        <TextBlock.Text>00:00:00</TextBlock.Text>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform X="50" Y="900"></TranslateTransform>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <Viewbox Name="SpeculativeJumpPreviewDisplay" Stretch="Uniform">
                                        <Viewbox.RenderTransformOrigin>
                                            <Point X="0" Y="0"></Point>
                                        </Viewbox.RenderTransformOrigin>
                                        <Viewbox.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="0.25" ScaleY="0.25"></ScaleTransform>
                                                <TranslateTransform X="1000" Y="830"></TranslateTransform>
                                            </TransformGroup>
                                        </Viewbox.RenderTransform>
                                        <Grid Height="1080" Width="1920">
                                            <Grid Width="1920" Height="1080">
                                                <Border Name="SpeculativeJumpPreviewBorder">
                                                    <Grid>
                                                        <viewmodels:SlidePreview x:Name="SpeculativeJumpPreview" ></viewmodels:SlidePreview>
                                                        <TextBlock Name="tbPreviewSpeculativeJumpVideoDuration" Foreground="{StaticResource whiteBrush}" FontSize="100">
                                                            <TextBlock.Text>00:00:00</TextBlock.Text>
                                                            <TextBlock.RenderTransform>
                                                                <TranslateTransform Y="900"></TranslateTransform>
                                                            </TextBlock.RenderTransform>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Viewbox>

                                </Grid>
                            </Grid>
                        </Viewbox>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
