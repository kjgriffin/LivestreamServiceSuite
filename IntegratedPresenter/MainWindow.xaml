                                        <TextBlock Name="tb_switcherConnection" Margin="5,0,0,0" Foreground="{StaticResource redBrush}">Disconnected</TextBlock>
                                    </StackPanel>
                                </Viewbox>
                            </Grid>

                            <Border Grid.Row="1" Grid.Column="0" Padding="5,5,5,5" Style="{StaticResource GroupBorder}">
                                <Grid Height="120" VerticalAlignment="Stretch">
                                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource GrayText}">TIME</TextBlock>
                                    <Viewbox Height="100">
                                        <TextBlock Name="TbTime" Foreground="#cfcfcf">00:00:00</TextBlock>
                                    </Viewbox>
                                </Grid>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Padding="5,5,5,5" Style="{StaticResource GroupBorder}">
                                <Grid Height="120">
                                    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Style="{StaticResource GrayText}">TIME ON SHOT</TextBlock>
                                    <Viewbox Height="100" VerticalAlignment="Center">
                                        <TextBlock Name="TbShotClock" Foreground="#cfcfcf">00:00</TextBlock>
                                    </Viewbox>
                                    <Viewbox VerticalAlignment="Bottom" Width="100" Height="20" Margin="0,-10,0,0" Cursor="Hand" MouseDown="ClickResetTotalShotCount">
